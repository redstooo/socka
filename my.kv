        size: root.width, root.height
        cols: 2
        GridLayout:
            cols: 1
            GridLayout:
                cols: 2
                Label:
                    text: "1. chemikália"

                TextInput:
                    id: chem1
                    multiline: False

                Label:
                    text: "2. chemikália"

                TextInput:
                    id: chem2
                    multiline: False

            Button:
                text: "Pridať"
                on_press: root.stlacenie()
        GridLayout:
            cols: 1
            Label:
                id: ukazovanie
                text: ""

            Label:
                id: ukazovanie2
                text: ""

